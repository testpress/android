<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/success_message_layout" />

        <LinearLayout
            android:id="@+id/registerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingTop="60dp"
            android:paddingRight="24dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:src="@drawable/login_screen_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">
                <!-- Username Label -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextLabelTab"
                    android:layout_marginTop="20dp"
                    android:theme="@style/TextLabel">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/editTextUserName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:hint="@string/label_username"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:nextFocusDown="@+id/editTextEmail"
                        android:singleLine="true"
                        style="@style/Input"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/usernameErrorText"
                    android:layout_height="wrap_content"
                    style="@style/TabInputError"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">
                <!-- Email Label -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextLabelTab"
                    android:layout_marginTop="8dp"
                    android:theme="@style/TextLabel">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/editTextEmail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:hint="@string/label_email"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:nextFocusDown="@+id/editTextPhone"
                        android:singleLine="true"
                        style="@style/Input"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/emailErrorText"
                    android:layout_height="wrap_content"
                    style="@style/TabInputError"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/countryCodePicker"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/input_height"
                        android:layout_gravity="center_vertical"
                        app:ccp_autoDetectCountry="true"
                        android:background="@drawable/rounded_border_edittext"
                        app:ccp_showFlag="false"
                        app:ccp_textSize="13sp"
                        android:paddingTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        app:ccp_defaultNameCode="IND" />

                    <!-- Phone Label -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/phoneLayout"
                        style="@style/TextLabelTab"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:theme="@style/TextLabel">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/editTextPhone"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/input_height"
                            android:hint="@string/label_phone"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLines="1"
                            android:nextFocusDown="@+id/editTextPassword"
                            android:singleLine="true"
                            style="@style/Input"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/phoneErrorText"
                    android:layout_height="wrap_content"
                    style="@style/TabInputError"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">
                <!-- Password Label -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextLabelTab"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:theme="@style/TextLabel">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/editTextPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:fontFamily="sans-serif"
                        android:hint="@string/label_password"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:nextFocusDown="@+id/editTextConfirmPassword"
                        android:singleLine="true"
                        style="@style/Input"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/passwordErrorText"
                    android:layout_height="wrap_content"
                    style="@style/TabInputError"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">
                <!-- Confirm Password Label -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextLabelTab"
                    android:layout_marginTop="8dp"
                    android:theme="@style/TextLabel">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/editTextConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:fontFamily="sans-serif"
                        android:hint="Confirm password"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:singleLine="true"
                        style="@style/Input"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/confirmPasswordErrorText"
                    android:layout_height="wrap_content"
                    style="@style/TabInputError"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonRegister"
                style="@style/Button.Tab"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Register" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
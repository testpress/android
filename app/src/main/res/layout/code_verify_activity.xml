<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo"
                android:layout_marginBottom="20dp"/>

            <EditText
                android:id="@+id/et_username"
                style="@style/SignInEditText"
                android:imeOptions="actionNext"
                android:nextFocusDown="@+id/et_password"
                android:hint="@string/label_username"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/et_password"
                style="@style/SignInEditText"
                android:inputType="textPassword"
                android:hint="@string/label_password"
                android:visibility="gone"
                android:imeOptions="actionNext"
                android:nextFocusDown="@+id/et_et_verificationCode"/>

            <EditText
                android:id="@+id/et_verificationCode"
                style="@style/SignInEditText"
                android:inputType="number"
                android:hint="@string/label_ask_code"
                android:imeOptions="actionDone"
                android:visibility="gone"/>

            <Button
                android:id="@+id/b_verify"
                style="@style/ShadowText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_background_states"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/verify"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:enabled="false"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/sms_receiving_layout">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/welcome"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:id="@+id/count"
                    android:text="30s"
                    android:padding="10dp"
                    android:textSize="20sp"/>

                <ProgressBar
                    android:id="@+id/progressbar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:max="30"
                    android:progress="0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/b_manually_verify"
                    style="@style/ShadowText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_background_states"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/manually_verify"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_gravity="bottom"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
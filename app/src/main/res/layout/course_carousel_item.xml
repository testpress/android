<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="155dp"
    android:layout_height="90dp"
    android:layout_marginLeft="15dp"
    android:layout_marginBottom="15dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="155dp"
            android:layout_height="87dp"
            card_view:cardCornerRadius="5dp">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:cropToPadding="true"
                android:background="@drawable/border_rectangle_dark"
                android:scaleType="centerInside" />
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <TextView
        android:id="@+id/title"
        android:layout_marginTop="10dp"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="#000"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/exam_content_layout"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:baselineAlignBottom="true"
            android:src="@drawable/ic_exam_grey" />

        <TextView
            android:id="@+id/exams_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="20 Exams"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/video_content_layout"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/video_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_video_grey" />

        <TextView
            android:id="@+id/videos_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="10 Videos"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/notes_content_layout"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/doc_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_news_grey" />

        <TextView
            android:id="@+id/notes_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="25 Docs"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
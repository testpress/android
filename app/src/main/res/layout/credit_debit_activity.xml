<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_actionbar"/>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fbutton="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_actionbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs."
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/transaction_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transaction id : " />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_root_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/label_fill_all_details"
                    android:textColor="@color/red"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/fill_all_details"/>

                <!--Card Number label-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/card_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Card Number"
                        style="@style/SignInEditText"
                        android:imeOptions="actionNext"
                        android:nextFocusDown="@+id/name_on_card"
                        android:inputType="number"
                        android:drawablePadding="15dp"
                        android:drawableRight="@drawable/debit_card"
                        android:maxLength="19"/>
                </android.support.design.widget.TextInputLayout>

                <!--Card Holder Name label-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/name_on_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Card Holder Name"
                        style="@style/SignInEditText"
                        android:imeOptions="actionNext"
                        android:nextFocusDown="@+id/expiry_month"
                        android:inputType="text"
                        android:layout_marginTop="20dp"
                        android:drawableRight="@drawable/card_holder"/>

                </android.support.design.widget.TextInputLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:orientation="horizontal">

                        <!--Month level-->

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/expiry_month"
                            style="@style/SignInEditText"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:hint="MM"
                            android:imeOptions="actionNext"
                            android:nextFocusDown="@+id/expiry_year"
                            android:inputType="number"
                            android:layout_marginTop="20dp"
                            android:maxLength="2"/>
                    </android.support.design.widget.TextInputLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:layout_margin="5dp"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:id="@+id/slash"/>

                        <!--Year label-->
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/expiry_year"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:hint="YY"
                            style="@style/SignInEditText"
                            android:imeOptions="actionNext"
                            android:nextFocusDown="@+id/card_cvv"
                            android:layout_alignParentTop="true"
                            android:layout_centerVertical="true"
                            android:inputType="number"
                            android:maxLength="2"/>
                    </android.support.design.widget.TextInputLayout>



                    <!--CVV label-->
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="0dp">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/card_cvv"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:hint="CVV  "
                            android:imeOptions="actionDone"
                            style="@style/SignInEditText"
                            android:inputType="number"
                            android:maxLength="4"
                            android:layout_marginLeft="40dp"
                            android:drawableRight="@drawable/lock"/>
                    </android.support.design.widget.TextInputLayout>
                 </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <info.hoang8f.widget.FButton
                        android:id="@+id/make_payment"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        fbutton:buttonColor="@color/button_background_disabled_end"
                        fbutton:shadowEnabled="true"
                        fbutton:shadowHeight="5dp"
                        fbutton:cornerRadius="0dp"
                        android:layout_marginTop="20dp"
                        android:text="Pay Now"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_xxlarge"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

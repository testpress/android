<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ripple_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:paddingTop="20dp"
            android:paddingLeft="17dp"
            android:paddingRight="23dp"
            android:paddingBottom="18dp"
            android:background="?attr/selectableItemBackground"
            android:descendantFocusability="afterDescendants"
            android:paddingStart="17dp"
            android:paddingEnd="23dp"
            tools:ignore="UselessParent">

            <in.testpress.testpress.ui.view.RoundedImageView
                android:id="@+id/display_picture"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:layout_marginRight="15dp"
                android:src="@drawable/profile_image_place_holder" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="6dp"
                    android:gravity="center_vertical"
                    android:paddingRight="20dp"
                    android:paddingEnd="20dp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColor="@color/testpress_text_gray_medium"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:tint="@color/grey_icon"
                    android:src="@drawable/ic_time_16dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="75dp"
                    android:textColor="@color/text_light"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/category_layout"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:tint="@color/grey_icon"
                        android:src="@drawable/view_icon"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/viewsCount"
                        android:textSize="12sp"
                        android:textColor="@color/text_light"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        </LinearLayout>
</LinearLayout>



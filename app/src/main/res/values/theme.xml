    <style name="Theme.Testpress.Dark"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>

        <item name="colorPrimary">@color/primary</item>
        <!--<item name="colorPrimaryDark">@color/theme_primary_dark</item>-->
        <!--<item name="colorAccent">@color/theme_accent_2</item>-->
        <item name="windowNoTitle">true</item>
        <!--<item name="android:textColorLink">@color/theme_accent_2</item>-->

    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_background_start</item>

